{
  "name": "my-package",
  "devDependencies": {
    "@lnu/eslint-config": "^1.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.5.1",
    "eslint-plugin-standard": "^4.0.1",
    "htmlhint": "^0.14.1",
    "jsonlint": "^1.6.3",
    "standard": "*",
    "stylelint": "^13.7.1"
  },
  "scripts": {
    "clean": "rm -rf node_modules src/*/node_modules",
    "htmlhint": "npx htmlhint ./src || exit 0",
    "lint": "npx eslint ./src || exit 0",
    "lint:fix": "npx eslint ./src --fix || exit 0",
    "stylelint": "npx stylelint \"./src/**/*.css\" || exit 0",
    "test": "npm run lint && npm run htmlhint"
  },
  "dependencies": {
    "nodemon": "^2.0.6"
  }
}
